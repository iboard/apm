<div class="issue-index">
  <h2><%= @issue.subject %></h2>

  <p>
    <b>PID:</b> <%= inspect @pid %></br>
    <b>ID:</b> <%= link @issue.id, to: "/issues/#{@issue.id}" %>
    <%= if @issue.parent_id do %>
      <b>Parent ID:</b> <%= link @issue.parent_id, to: "/issues/#{@issue.parent_id}" %>
    <%= end %>
  </p>
  
  <%= if( (ApmIssues.Issue.children(@pid) |> Enum.count()) > 0) do %>
    <blockquote>
      <%= ApmPx.IssuesView.render_children(@pid) %> 
    </blockquote>
  <% end %>

</div>
